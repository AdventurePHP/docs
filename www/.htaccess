RewriteEngine on

####################################################################################################
# Eliminate www subdomain
#
RewriteCond %{HTTP_HOST} ^www [NC]
RewriteRule ^(.*)$ http://adventure-php-framework.org/$1 [R=301,L]

####################################################################################################
# English page' shortcut
#
RewriteCond %{REQUEST_URI} ^/en$ [NC]
RewriteRule .* /Page/001-Home [NC,L]

####################################################################################################
# RewriteRule for generic URL rewriting
#
RewriteCond %{REQUEST_URI} !^(\/frontend) [NC]
RewriteRule !((index|indexer|sitemap)\.php|\.css|\.jpe?g|\.png|\.gif|\.zip|\.rar|\.ico|sitemap\.xml|google0530241f73e9cc6c\.html)$ /index.php?query=%{REQUEST_URI}&%{QUERY_STRING} [NC,L]